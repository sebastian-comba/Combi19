<%- include("partials/header"); -%>
<h2>Alta de rutas</h2>
<div id="err"></div>
    <label for="origen">Origen:</label><br>
    <select  class="ruta" name="origen" id="origen">
        <% lugares.forEach( (lugar) => { %>
        <option value="<%= lugar._id %>">
          <%= lugar.ciudad %>-<%= lugar.provincia %>
        </option>
        <% }); %>
    </select><br>
    <label for="destino">Destino:</label><br>
    <select class="ruta" name="destino" id="destino">
        <% lugares.forEach( (lugar) => { %>
        <option value="<%= lugar._id %>">
          <%= lugar.ciudad %>-<%= lugar.provincia %>
        </option>
        <% }); %>
    </select><br>
    <label for="combi">Combi:</label><br>
    <select class="ruta" name="combi" id="combi">
        <% combis.forEach( (combi) => { %>
        <option value="<%= combi._id %>">
          <%= combi.marca %>-<%= combi.modelo %>-<%= combi.patente %>
        </option>
        <% }); %>
    </select><br>  
    <label for="distancia">Distancia:</label><br>
    <input class="ruta" type="text" id="distancia" name="distancia" required/><br>
    <label for="hora">Hora:</label><br>
    <input class="ruta" type="time" id="hora" name="hora" required /><br>
    <button type="submit" id="guardar">Agregar</button>
<script src="/js/cargar-ruta.js"></script>
<%- include("partials/footer"); -%>
