<%- include("partials/header"); -%>
<h1>Lista de Insumos</h1>
<a href="/alta-insumo">
    <button id="alta-insumo">Cargar Insumo</button>
</a>
<% if (!data.length) { %>
    <h2>No hay insumos cargados</h2>
<% } else { %>
    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Tipo</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
        <% data.forEach(function(insumo) { %>
            <tr>
                <td><%= insumo.nombre %></td>
                <td><%= insumo.tipo %></td>
                <td><%= insumo.precio %></td>
                <td><button >Modificar</button></td>
                <td>
                    <form action="baja-insumo" method="POST">
                        <button type="submit" name="<%= insumo.nombre %>">Eliminar</button>
                    </form>
                </td>
            </tr>
        <% }); %>
        </tbody>
    </table>
<% } %>
<%- include("partials/footer"); -%>
