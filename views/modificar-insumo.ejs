<%- include("partials/header"); -%>
<h1>Modificar Insumo </h1>

<form action = "/modificar-insumo" method="POST">
    <label for="nombre" required>Nombre:</label><br>
    <input type="text" placeholder="<%= data.nombre %>" value="<%= data.nombre %>" id="nombre" name="nombre"/><br>
    <label for="tipo" required>Tipo:</label><br>
    <input type="text" placeholder="<%= data.tipo %>" value="<%= data.tipo %>" id="tipo" name="tipo" /><br>
    <label for="precio" required>Precio:</label><br>
    <input type="text" placeholder="<%= data.precio %>" value="<%= data.precio %>" id="precio" name="precio"/><br>
    <input type="hidden" value="<%= data._id %>" id="id" name="id"/>
    <button type="submit">Modificar</button>
</form> 


<%- include("partials/footer"); -%>