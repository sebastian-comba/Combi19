<h2>Mi perfil</h2><br>
<%
function pad(number) {
  if (number < 10) {
    return "0" + number;
  }
  return number;
};
    
    Date.prototype.fecha= function(){
  return (
    pad(this.getDate()) +
    "/" +
    pad(this.getMonth() + 1) +
    "/" +
    pad(this.getFullYear()) 
  );
};
Date.prototype.mes= function(){
  return (
    pad(this.getMonth() + 2) +
    "/" +
    pad(this.getFullYear()) 
  );
};
%>
